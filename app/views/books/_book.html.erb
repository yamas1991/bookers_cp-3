<%= form_with model: book do |f| %>

  <div class="form-title row">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "col-sm-12" %>
  </div>

  <div class="form-body row">
  	<%= f.label :Opinion %>
    <%= f.text_area :body, class: "col-sm-12" %>
  </div>

  <div class="actions row">
    <%= f.submit class: "btn btn-primary col-sm-12" %>
  </div>
<% end %>