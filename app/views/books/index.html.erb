<div class="container">
  <div class="row">

    <%= render 'books/error', model: @book %>
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table book-index">
        <h2>Books</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, size: "100x100", fallback: "no_image.jpg"%>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              
              
              <td>
                
                  <div class="likes_buttons_<%= book.id %>">
                    <%= render partial: 'likes/like', locals: { book: book} %>
                    </div>
                 
             <% end %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>